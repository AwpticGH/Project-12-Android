<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="@color/colorPrimary"
                android:endColor="@color/colorAccent"
                android:angle="135"
                />
            <stroke
                android:width="1dp"
                android:color="@color/black" />
            <corners
                android:radius="20dp"/>
            <padding
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"
                android:left="10dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/colorPrimary"
                android:endColor="@color/colorAccent"
                android:angle="-45"
                />
            <stroke
                android:width="1dp"
                android:color="@color/black"/>
            <corners
                android:radius="20dp"/>
            <padding
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"
                android:left="10dp"/>
        </shape>
    </item>
</selector>